<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Online Store</display-name>

    <servlet>
        <servlet-name>productsServlet</servlet-name>
        <servlet-class>com.wasp.onlinestore.web.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productAddServlet</servlet-name>
        <servlet-class>com.wasp.onlinestore.web.ProductAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productAddServlet</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productUpdateServlet</servlet-name>
        <servlet-class>com.wasp.onlinestore.web.ProductUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productUpdateServlet</servlet-name>
        <url-pattern>/product/update/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productDeleteServlet</servlet-name>
        <servlet-class>com.wasp.onlinestore.web.ProductDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productDeleteServlet</servlet-name>
        <url-pattern>/product/delete</url-pattern>
    </servlet-mapping>
</web-app>